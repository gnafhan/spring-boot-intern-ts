# Dockerfile khusus untuk development dengan hot reload
FROM eclipse-temurin:21-jdk-alpine

WORKDIR /app

# Install curl untuk health checks
RUN apk add --no-cache curl

# Copy Maven wrapper dan dependencies
COPY mvnw .
COPY .mvn .mvn
COPY pom.xml .

# Download dependencies
RUN ./mvnw dependency:go-offline -B

# Copy source code
COPY src src

# Expose port
EXPOSE 8080
EXPOSE 5005

# Development mode dengan debug enabled
ENV JAVA_OPTS="-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:5005"

# Run dengan spring-boot:run untuk hot reload
CMD ["./mvnw", "spring-boot:run", "-Dspring-boot.run.jvmArguments=-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:5005"]
